<h3 class="center-align">Edit Story</h3>
<div class="row">
    <form action="/stories/{{story._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input id="title" name="title" type="text" value="{{story.title}}">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select name="status" id="status" >
                    {{#select story.status}}
                        <option value="public" selected >Public</option>
                        <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story</h5>
                <textarea id="body" name="body">{{story.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" class="btn" value="Edit Story">
            <a href="/dashboard" class="btn orange">Cancel</a>
    </form>
</div>