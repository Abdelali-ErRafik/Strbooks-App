<main >
    <center>
        <h1 class="logo teal-text darken-4" ><i class="fa-solid fa-right-to-bracket"></i> Login</h1>
        <div class="container">
            <div class="z-depth-1 teal lighten-5 row"
                style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
                <form class="col s12" method="post">
                    <div class='row'>
                        <div class='col s12'>
                        </div>
                    </div>

                    <div class='row'>
                        <div class='input-field col s12'>
                            <input class='validate' type='email' name='email' id='email' />
                            <label for='email'><i class="fa-solid fa-envelope"></i> Enter your email</label>
                        </div>
                    </div>

                    <div class='row'>
                        <div class='input-field col s12'>
                            <input class='validate' type='password' name='password' id='password' />
                            <label for='password'><i class="fa-solid fa-lock"></i> Enter your password</label>
                        </div>
                        <label style='float: right;'>
                            <a class='teal-text darken-3' href='#!'>Forgot Password?</a>
                        </label>
                    </div>

                    <br />
                    <center>
                        <div class='row'>
                            <a href="/auth/google" name='btn_login'
                                class='col s12 btn btn-large teal accent-4'>
                                Login
                            </a>
                        </div>
                    </center>
                </form>
                <div class="row">
                    <div class="col s6">
                        <a href="/auth/google" class="teal-text darken-4" ><strong><i class="fa-solid fa-user"></i> Create account</strong></a>
                    </div>
                    <div class="col s6">
                        <a href="/auth/google" class="teal-text darken-4" ><strong><i class="fab fa-google"></i> Login with google</strong></a>
                    </div>
                </div>
            </div>
        </div>
    </center>
</main>




